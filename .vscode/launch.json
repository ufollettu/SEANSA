{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Angular",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200/#",
      "webRoot": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Node.js",
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
        "program": "${workspaceRoot}/app.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }
  ]
}